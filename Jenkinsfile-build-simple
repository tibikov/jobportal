pipeline {
    agent any

    tools {
        git 'Default'
    }


	options {
		disableConcurrentBuilds()
        skipDefaultCheckout()
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
	}

    parameters {
        gitParameter branchFilter: 'origin/(.*)', defaultValue: 'main', name: 'BRANCH_NAME', type: 'PT_BRANCH', sortMode: 'ASCENDING_SMART'
        booleanParam(name: 'CLEAN_BUILD', defaultValue: true, description: 'Clean Build')
        booleanParam(name: 'SKIP_TESTS', defaultValue: true, description: 'Skip JUnit and UI Tests')
    }

    stages {
        stage('Checkout') {
            steps {
                git url:'https://github.com/tibikov/jobportal.git', credentialsId:'tibikov-build', branch:'${BRANCH_NAME}'

            }
        }
        stage('Build') {
            steps {
                script {
                    if(isUnix()){
                        sh 'mvn clean package'
                    } else {
                        bat 'mvn clean package'
                    }
                }
            }
        }
		stage('start') {
			steps {
				script {
                    if(isUnix()){
                        sh 'java -jar target/jobportal-1.0.0.jar'
                    } else {
                        bat 'java -jar target/jobportal-1.0.0.jar'
                    }

				}
			}
		}
    }
}
